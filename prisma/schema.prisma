generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum CreditTxType {
  AWARD       // aus QR-Claim/Training
  ADJUSTMENT  // Admin-Korrektur (+/-)
}

enum Role {
  USER
  ADMIN
}

enum CreditTxReason {
  TRAINING_CLAIM
  ADMIN_ADJUST
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  name         String?
  birthDate    DateTime?

  company        String?
  gender         String?
  companyAddress String?

  role         Role     @default(USER)

  creditsTotal  Int      @default(0)

  badges        Badge[]
  creditTxs     CreditTransaction[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Training {
  id           String   @id @default(cuid())
  title        String
  date         DateTime
  createdAt    DateTime @default(now())
  creditsAward Int      @default(0)

  tokens    ClaimToken[]
  badges    Badge[]
  creditTxs CreditTransaction[]
}

model ClaimToken {
  id         String   @id @default(cuid())
  token      String   @unique
  trainingId String
  training   Training @relation(fields: [trainingId], references: [id], onDelete: Cascade)

  expiresAt  DateTime
  maxClaims  Int      @default(999999)
  claims     Int      @default(0)

  creditTxs  CreditTransaction[]

  createdAt  DateTime @default(now())
}

model Badge {
  id         String   @id @default(cuid())
  userId     String
  trainingId String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  training   Training @relation(fields: [trainingId], references: [id], onDelete: Cascade)

  issuedAt   DateTime @default(now())

  creditTx   CreditTransaction?

  @@unique([userId, trainingId])
}

model CreditTransaction {
  id          String         @id @default(cuid())
  userId      String
  amount      Int
  type        CreditTxType
  reason      CreditTxReason

  trainingId  String?
  badgeId     String?  @unique
  claimTokenId String?

  meta        Json?

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  training    Training? @relation(fields: [trainingId], references: [id], onDelete: SetNull)
  badge       Badge?   @relation(fields: [badgeId], references: [id], onDelete: SetNull)
  claimToken  ClaimToken? @relation(fields: [claimTokenId], references: [id], onDelete: SetNull)

  createdAt   DateTime @default(now())

  @@index([userId, createdAt])
  @@index([trainingId, createdAt])
  @@index([claimTokenId, createdAt])
}
